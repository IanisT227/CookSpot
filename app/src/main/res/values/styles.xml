<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTitle">
        <item name="android:textSize">52sp</item>
        <item name="fontFamily">@font/montserrat_bolditalic</item>
    </style>

    <style name="Heading1">
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="Heading2">
        <item name="android:textSize">48sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Heading3">
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Subtitle1">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Subtitle2">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="Subtitle3">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="Heading4">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/montserrat_extrabold</item>
        <item name="android:textColor">@color/neutral_black</item>
    </style>

    <style name="Button1">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="Button2">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="Button3">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="Button4">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="RegularText">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="RegularTextSemiBold">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="RegularTextBold">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="SmallText">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/montserrat_light</item>
    </style>

    <style name="TagText">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>


    <style name="RoundedTopCardViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">116dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAppearance">@style/Button1</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="PrimaryButtonWhite" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/primary_orange</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_primary_button_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAppearance">@style/Button3</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="RadioButtonSelected" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/neutral_white</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/radio_flat_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAppearance">@style/Button4</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="RadioButtonDefault" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@drawable/radio_text_color_selector</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/radio_flat_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAppearance">@style/Button4</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primary_orange</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_outlined_btn</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAppearance">@style/Button1</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="OutlinedButtonWhite" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/neutral_white</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_outlined_btn_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAppearance">@style/Button3</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="TagTextView" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:minHeight">@dimen/tag_height</item>
        <item name="android:textAppearance">@style/TagText</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="backgroundTint">@null</item>
        <item name="android:textAppearance">@style/RegularText</item>
        <item name="hintTextColor">@color/neutral_grey</item>
        <item name="android:textColorHint">@color/neutral_grey</item>
        <item name="android:textColor">@color/neutral_grey</item>
        <item name="iconTint">@color/neutral_grey</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="boxStrokeColor">@color/inputTextBox_color</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/neutral_white</item>
    </style>
</resources>