<resources>
    <!-- Base application theme. -->
    <style name="Theme.CookSpot" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_orange</item>
        <item name="colorPrimaryVariant">@color/primary_orange</item>
        <item name="colorOnPrimary">@color/neutral_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_orange</item>
        <item name="colorSecondaryVariant">@color/primary_orange</item>
        <item name="colorOnSecondary">@color/neutral_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_orange</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/PrimaryButton</item>
        <item name="materialButtonOutlinedStyle">@style/OutlinedButton</item>
        <item name="editTextStyle">@style/TextInputEditTextStyle</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
    </style>
</resources>